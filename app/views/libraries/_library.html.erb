<%= link_to(library) do %>
	<div class="cl-list-item <%= cycle('even', 'odd') %>" data-link="<%= library %>">
	  <div class="library-name"><%= library.name %>	  
 	  <% if library.bname || library.cname %>
    	<span class="library-additional-name">(<%= library.bname %><%= " - #{library.cname}" if library.cname %>)</span>
  	<% end %>
	  </div>
	  <div class="library-address">
			<img src="<%= asset_path 'ic_location_gray.png' %>"/>
  		<span>
    		<%= library.street %>,    
    		<%= library.zip %>
    		<%= library.city %>
  		</span>
		</div>
	</div>
<% end %>  