<div style="margin-top:15px;">
<h3>Telefony</h3>
<% @library.phones.each do |phone| %>
  <div><%= phone.phone %></div>
<% end %>
</div>


<div style="margin-top:15px;">
<h3>Emaily</h3>
<% @library.emails.each do |email| %>
  <div><%= email.email %> (<%= email.note %>)</div>
<% end %>
</div>

<div style="margin-top:15px;">
<h3>Websites</h3>
<% @library.websites.each do |website| %>
  <div>
    <%= website.url %> 
    <% if website.note %> 
    (<%= website.note %>)
    <% end %>
  </div>
<% end %>
</div>


<div style="margin-top:15px;">
<h3>Faxy</h3>
<% @library.faxes.each do |fax| %>
  <div><%= fax.fax %></div>
<% end %>
</div>

<div style="margin-top:15px;">
<h3>Odpovědné osoby</h3>
<% @library.people.each do |person| %>
  <h4><%= person.role %></h4>
  <div><%= person.degree1 %> <%= person.first_name %> <%= person.last_name %> <%= person.degree2 %></div>
  <div>email: <%= person.email %></div>
  <div>tel.: <%= person.phone %></div>
<% end %>
</div>


<% unless @library.latitude.nil? || @library.longitude.nil? %>
<script type="text/javascript">  
  function initialize() {

    var myLatlng = new google.maps.LatLng(<%= @library.latitude%>, <%= @library.longitude%>);
    var mapOptions = {
      zoom: 10,
      center: myLatlng
    }
    var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);


    var contentString = '<div id="content">'+
      '<div id="siteNotice">'+
      '</div>'+
      '<h2 id="firstHeading" class="firstHeading"><%= @library.name%></h1>'+
      '<div id="bodyContent">'+
      '<p>' +
      '<%= @library.street %>' + '<br/>' +
      '<%= @library.city %>' + '<br/>' +
      '<%= @library.zip %>' + '<br/>' +
      '</p>'+
      '</div>'+
      '</div>';

    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });


    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: '<%= @library.name%>'
    });


    google.maps.event.addListener(marker, 'click', function() {
      infowindow.open(map,marker);
    });


  }
  initialize();
  /*google.maps.event.addDomListener(window, 'load', initialize);*/
</script>
<% end %>